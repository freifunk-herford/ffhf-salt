# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# SaltStack State Files
[*.sls]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Python Files
[*.py]
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# Shell Script Files
[*.sh]
charset = utf-8
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true

# Config Files
[*.{conf,options}]
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# Text Files
[*.txt]
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# restructuredText Files
[*.rst]
indent_style = space
indent_size = 3

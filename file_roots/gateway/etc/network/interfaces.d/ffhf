auto hfBR
iface hfBR inet static
    hwaddress 02:42:0a:22:00:03
    address 10.34.0.3
    netmask 255.255.0.0
    pre-up brctl addbr $IFACE
    up ip address add fdf3:2049:5152::a22:0003/64 dev $IFACE
    post-down brctl delbr $IFACE

allow-hotplug hfVPN
iface hfVPN inet6 manual
    hwaddress 02:00:0a:22:00:03
    pre-up modprobe batman-adv
    post-up batctl -m hfBAT if add $IFACE
    post-up ip link set dev hfBAT up

allow-hotplug hfBAT
iface hfBAT inet6 manual
    pre-up modprobe batman-adv
    post-up brctl addif hfBR $IFACE
    post-up batctl -m $IFACE it 10000
    post-up batctl -m $IFACE vm server
    post-up batctl -m $IFACE gw server 96mbit/96mbit
    pre-down brctl delif hfBR $IFACE || true
